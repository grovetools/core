{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/grovetools/core/config/base-config",
  "$defs": {
    "ExplicitProject": {
      "properties": {
        "path": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "path",
        "enabled"
      ]
    },
    "GlobalNotebookConfig": {
      "properties": {
        "root_dir": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "root_dir"
      ]
    },
    "GroveSourceConfig": {
      "properties": {
        "path": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "notebook": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "path"
      ]
    },
    "NoteTypeConfig": {
      "properties": {
        "description": {
          "type": "string"
        },
        "template_path": {
          "type": "string"
        },
        "filename_format": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "icon_color": {
          "type": "string"
        },
        "default_expand": {
          "type": "boolean"
        },
        "sort_order": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Notebook": {
      "properties": {
        "root_dir": {
          "type": "string"
        },
        "notes_path_template": {
          "type": "string"
        },
        "plans_path_template": {
          "type": "string"
        },
        "chats_path_template": {
          "type": "string"
        },
        "templates_path_template": {
          "type": "string"
        },
        "recipes_path_template": {
          "type": "string"
        },
        "in_progress_path_template": {
          "type": "string"
        },
        "completed_path_template": {
          "type": "string"
        },
        "prompts_path_template": {
          "type": "string"
        },
        "types": {
          "additionalProperties": {
            "$ref": "#/$defs/NoteTypeConfig"
          },
          "type": "object"
        },
        "sync": true
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "root_dir"
      ]
    },
    "NotebookRules": {
      "properties": {
        "default": {
          "type": "string"
        },
        "global": {
          "$ref": "#/$defs/GlobalNotebookConfig"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "NotebooksConfig": {
      "properties": {
        "definitions": {
          "additionalProperties": {
            "$ref": "#/$defs/Notebook"
          },
          "type": "object"
        },
        "rules": {
          "$ref": "#/$defs/NotebookRules"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the configuration"
    },
    "version": {
      "type": "string",
      "description": "Configuration version (e.g. '1.0')"
    },
    "workspaces": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "description": "List of workspace directories in this ecosystem"
    },
    "build_cmd": {
      "type": "string",
      "description": "Custom command for 'grove build' (e.g."
    },
    "build_after": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "description": "List of project names that must be built before this project. Used by 'grove build' to determine build order."
    },
    "notebooks": {
      "$ref": "#/$defs/NotebooksConfig",
      "description": "Configuration for notebooks"
    },
    "groves": {
      "additionalProperties": {
        "$ref": "#/$defs/GroveSourceConfig"
      },
      "type": "object",
      "description": "Root directories to search for projects and ecosystems"
    },
    "explicit_projects": {
      "items": {
        "$ref": "#/$defs/ExplicitProject"
      },
      "type": "array",
      "description": "Specific projects to include without discovery"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "version"
  ],
  "title": "Grove Core Configuration",
  "description": "Base schema for core grove.yml properties."
}