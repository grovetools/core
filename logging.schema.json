{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/mattsolo1/grove-core/logging/config",
  "$defs": {
    "ComponentFilteringConfig": {
      "properties": {
        "only": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "show": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "hide": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "FileSinkConfig": {
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "path": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "default": "json"
        }
      },
      "type": "object",
      "required": [
        "enabled",
        "path"
      ]
    },
    "FormatConfig": {
      "properties": {
        "preset": {
          "type": "string"
        },
        "disable_timestamp": {
          "type": "boolean"
        },
        "disable_component": {
          "type": "boolean"
        },
        "structured_to_stderr": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "preset",
        "disable_timestamp",
        "disable_component",
        "structured_to_stderr"
      ]
    }
  },
  "properties": {
    "level": {
      "type": "string",
      "default": "info"
    },
    "report_caller": {
      "type": "boolean",
      "default": true
    },
    "log_startup": {
      "type": "boolean"
    },
    "file": {
      "$ref": "#/$defs/FileSinkConfig"
    },
    "format": {
      "$ref": "#/$defs/FormatConfig"
    },
    "groups": {
      "additionalProperties": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "type": "object"
    },
    "component_filtering": {
      "$ref": "#/$defs/ComponentFilteringConfig"
    },
    "show_current_project": {
      "type": "boolean"
    }
  },
  "type": "object",
  "title": "Grove Logging Configuration",
  "description": "Schema for the 'logging' extension in grove.yml."
}