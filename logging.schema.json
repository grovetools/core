{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/grovetools/core/logging/config",
  "$defs": {
    "ComponentFilteringConfig": {
      "properties": {
        "only": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Strict whitelist of components/groups to show (ignores show/hide)",
          "x-layer": "global",
          "x-priority": "85"
        },
        "show": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Components/groups to always show (overrides hide)",
          "x-layer": "global",
          "x-priority": "86"
        },
        "hide": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Components/groups to hide from log output",
          "x-layer": "global",
          "x-priority": "87"
        }
      },
      "type": "object"
    },
    "FileSinkConfig": {
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable file logging",
          "default": true,
          "x-layer": "global",
          "x-priority": "70"
        },
        "path": {
          "type": "string",
          "description": "Full path to the log file",
          "x-layer": "global",
          "x-priority": "71"
        },
        "format": {
          "type": "string",
          "enum": [
            "text",
            "json"
          ],
          "description": "File log format: text or json",
          "default": "json",
          "x-layer": "global",
          "x-priority": "72"
        }
      },
      "type": "object",
      "required": [
        "enabled",
        "path"
      ]
    },
    "FormatConfig": {
      "properties": {
        "preset": {
          "type": "string",
          "enum": [
            "default",
            "simple",
            "json"
          ],
          "description": "Log format preset: default (rich)/simple/json",
          "x-layer": "global",
          "x-priority": "75"
        },
        "disable_timestamp": {
          "type": "boolean",
          "description": "Disable timestamp in log output",
          "default": false,
          "x-layer": "global",
          "x-priority": "76"
        },
        "disable_component": {
          "type": "boolean",
          "description": "Disable component name in log output",
          "default": false,
          "x-layer": "global",
          "x-priority": "77"
        },
        "structured_to_stderr": {
          "type": "string",
          "enum": [
            "auto",
            "always",
            "never"
          ],
          "description": "When to send structured logs to stderr",
          "default": "auto",
          "x-layer": "global",
          "x-priority": "78"
        }
      },
      "type": "object",
      "required": [
        "preset",
        "disable_timestamp",
        "disable_component",
        "structured_to_stderr"
      ]
    }
  },
  "properties": {
    "level": {
      "type": "string",
      "enum": [
        "debug",
        "info",
        "warn",
        "error"
      ],
      "description": "Minimum log level (debug/info/warn/error)",
      "default": "info",
      "x-layer": "global",
      "x-priority": "60"
    },
    "report_caller": {
      "type": "boolean",
      "description": "Include file/line/function in log output",
      "default": true,
      "x-layer": "global",
      "x-priority": "65"
    },
    "log_startup": {
      "type": "boolean",
      "description": "Log 'Grove binary started' on first init",
      "default": false,
      "x-layer": "global",
      "x-priority": "90"
    },
    "file": {
      "$ref": "#/$defs/FileSinkConfig",
      "description": "File logging sink configuration",
      "x-layer": "global",
      "x-priority": "70"
    },
    "format": {
      "$ref": "#/$defs/FormatConfig",
      "description": "Log output format settings",
      "x-layer": "global",
      "x-priority": "75"
    },
    "groups": {
      "additionalProperties": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "type": "object",
      "description": "Named collections of component loggers for filtering",
      "x-layer": "global",
      "x-priority": "80"
    },
    "component_filtering": {
      "$ref": "#/$defs/ComponentFilteringConfig",
      "description": "Rules for filtering logs by component",
      "x-layer": "global",
      "x-priority": "85"
    },
    "show_current_project": {
      "type": "boolean",
      "description": "Always show logs from current project regardless of filters",
      "x-layer": "global",
      "x-priority": "88"
    }
  },
  "type": "object",
  "title": "Grove Logging Configuration",
  "description": "Schema for the 'logging' extension in grove.yml."
}