{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/mattsolo1/grove-core/config/notebook",
  "$defs": {
    "NoteTypeConfig": {
      "properties": {
        "description": {
          "type": "string"
        },
        "template_path": {
          "type": "string"
        },
        "filename_format": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "root_dir": {
      "type": "string"
    },
    "notes_path_template": {
      "type": "string"
    },
    "plans_path_template": {
      "type": "string"
    },
    "chats_path_template": {
      "type": "string"
    },
    "types": {
      "additionalProperties": {
        "$ref": "#/$defs/NoteTypeConfig"
      },
      "type": "object"
    },
    "sync": true
  },
  "type": "object",
  "title": "Grove Notebook Configuration",
  "description": "Schema for the 'notebook' extension in grove.yml."
}