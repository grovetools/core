{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/grovetools/core/config/notebook",
  "$defs": {
    "NoteTypeConfig": {
      "properties": {
        "description": {
          "type": "string"
        },
        "template_path": {
          "type": "string"
        },
        "filename_format": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "icon_color": {
          "type": "string"
        },
        "default_expand": {
          "type": "boolean"
        },
        "sort_order": {
          "type": "integer"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "root_dir": {
      "type": "string"
    },
    "notes_path_template": {
      "type": "string"
    },
    "plans_path_template": {
      "type": "string"
    },
    "chats_path_template": {
      "type": "string"
    },
    "templates_path_template": {
      "type": "string"
    },
    "recipes_path_template": {
      "type": "string"
    },
    "in_progress_path_template": {
      "type": "string"
    },
    "completed_path_template": {
      "type": "string"
    },
    "prompts_path_template": {
      "type": "string"
    },
    "types": {
      "additionalProperties": {
        "$ref": "#/$defs/NoteTypeConfig"
      },
      "type": "object"
    },
    "sync": true
  },
  "type": "object",
  "title": "Grove Notebook Configuration",
  "description": "Schema for the 'notebook' extension in grove.yml."
}